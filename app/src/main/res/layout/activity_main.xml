        <!-- Question 6:  Rhode Island -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--IMAGE:  Rhode Island -->
            <ImageView
                android:id="@+id/roger_williams"
