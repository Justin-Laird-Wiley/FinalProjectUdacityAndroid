<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Question 1:  Jan Matzeliger -->
            <!--IMAGE:  Jan Matzeliger-->
            <ImageView
                android:id="@+id/jan_matzeliger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jan_matzeliger" />

            <TextView
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toRightOf="@id/jan_matzeliger"
                android:text="In what Massachusetts factory city did Jan Matzeliger develop his shoe-lasting machine?"
                android:textColor="#000000"
                android:textSize="16sp" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question1"
                android:layout_toRightOf="@id/jan_matzeliger"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/lawrence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@android:color/black"
                    android:onClick="onRadioButtonClicked"
                    android:text="Lawrence" />

                <RadioButton
                    android:id="@+id/lynn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@android:color/black"
                    android:onClick="onRadioButtonClicked"
                    android:text="Lynn" />

                <RadioButton
                    android:id="@+id/lowell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@android:color/black"
                    android:onClick="onRadioButtonClicked"
                    android:text="Lowell" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/jan_matzeliger"
                android:layout_margin="16dp"
                android:background="@android:color/black" />

        </RelativeLayout>

        <!-- Question 2:  Emily Dickensen -->
