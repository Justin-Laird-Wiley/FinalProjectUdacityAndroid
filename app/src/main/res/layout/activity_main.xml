                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dickenson" />

            <TextView
                android:id="@+id/question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toLeftOf="@+id/emily_dickenson"
                android:text="In what Massachusetts factory city did Jan Matzeliger develop his shoe-lasting machine?"
                android:textColor="#000000"
                android:textSize="16sp" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question2"
                android:layout_toLeftOf="@id/emily_dickenson"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/amherst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@android:color/black"
                    android:onClick="onRadioButtonClicked"
                    android:text="Lawrence" />

                <RadioButton
                    android:id="@+id/northampton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@android:color/black"
                    android:onClick="onRadioButtonClicked"
                    android:text="Lynn" />

                <RadioButton
                    android:id="@+id/south_deerfield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@android:color/black"
                    android:onClick="onRadioButtonClicked"
                    android:text="Lowell" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/emily_dickenson"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/black" />

        </RelativeLayout>

        <!-- Question 3:  Robert Goddard -->
